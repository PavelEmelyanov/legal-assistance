@model LA.BusinessLogic.Models.Document

@{ 
    ViewBag.Title = Model.Name;
}

<span id="doc-data-json"
      class="hidden">
    @Html.Raw(Json.Encode(Model))
</span>

<div class="container doc-form-container" ng-controller="AppController">
    <div class="fancy-title title-bottom-border title-center nobottommargin">
        <h1>@Model.Name</h1>
    </div>
    <div class="doc-form-wrapper">
        <div class="css3-spinner js-wizard-loading" style="position: absolute;">
            <div class="css3-spinner-bounce1"></div>
            <div class="css3-spinner-bounce2"></div>
            <div class="css3-spinner-bounce3"></div>
        </div>  
        <div ng-include="docUrl">
        </div>   
    </div>      
</div>


@section scripts{
    @Scripts.Render("~/bundles/document")    

    <script type="text/javascript">
        (function () {
            function onInit() {
                setTimeout(function () {
                    $('.js-wizard-loading').remove();
                }, 250);                
            }

            $(document).ready(onInit);
            $(window).load(onInit);
        }())
    </script>
}